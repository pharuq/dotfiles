{
    "editor.formatOnPaste": true,
    "editor.tabSize": 2,
    "editor.minimap.enabled": false,
    "workbench.colorTheme": "One Monokai",
    "workbench.colorCustomizations": {
        "editor.selectionHighlightBackground": "#ffff0070",
        "editor.selectionBackground": "#00ff0060",
        "editor.findMatchHighlightBackground": "#ffff0070",
        "editor.findMatchBackground": "#00ff0060"
    },
    "workbench.sideBar.location": "left",
    "terminal.integrated.fontSize": 14,
    "vim.useSystemClipboard": true,
    "window.zoomLevel": 0,
    "files.insertFinalNewline": true,
    "ruby.lint": {
        "rubocop": {
            "lint": true,
            // "levels": [ "error"],
        },
       "debride": true, 
    },
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "p",
            ],
            "after": [
                "p",
                "g",
                "v",
                "y"
            ]
        }
    ],
    "workbench.editor.enablePreview": false,
    "ctags": {
      "executePath": "/Users/ryomashindo/.rbenv/shims/ripper-tags",
      "options": "--tag-file=.tags --recursive --force --exclude=/assets/ --exclude=.bundle --exclude=.git/ --exclude=coverage/ --exclude=.arcanist-extensions/ --exclude=log/ --exclude=tmp/ --exclude=bin/",
      "fileName": ".tags"
    },
    "workbench.editor.closeEmptyGroups": false,
    "search.location": "panel"
}
